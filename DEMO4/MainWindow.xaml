<Window x:Class="DEMO4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMO4"
        mc:Ignorable="d"
        Title="MainWindow" Height="245" Width="289">
    <StackPanel Margin="15,15,15,15">
        <Label Content="Логин"/>
        <TextBox x:Name="loginBox" TextWrapping="Wrap" Text=""/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="passwordBox"/>
        <Button x:Name="loginButton" Content="Вход" Margin="0,18,0,0" Click="Button_Click"/>
        <Button x:Name="exitButton" Content="Выход" Margin="0,18,0,0" Click="exitButton_Click"/>

    </StackPanel>
</Window>
